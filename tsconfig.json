{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@/i18n": [
        "i18n/index.js"
      ],
      "@/*": [
        "*"
      ]
    },
    "target": "es2020",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node"
  },
  "include": [
    "src/pages/**/*",
    "components/**/*",
    "types.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
